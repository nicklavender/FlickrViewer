<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<PreferenceCategory
		app:title="UI Settings">

	<Preference
		app:key="animations"
		app:title="Transition animations"
		app:summary="Transitions when moving between images"/>

		<ListPreference
			app:key="animation_styles"
			app:title="Animation Style"
			app:summary="Select animation style."
			app:entries="@array/entries"
			app:entryValues="@array/entry_values"
			app:dialogTitle="Animation Dialog"/>


	</PreferenceCategory>

</PreferenceScreen>