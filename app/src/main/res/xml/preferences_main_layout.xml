<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<PreferenceCategory
		app:title="UI Settings">

		<ListPreference
			app:key="animation_styles"
			app:title="Animation Style"
			app:summary="Select animation style."
			app:entries="@array/entries"
			app:entryValues="@array/entry_values"
			app:dialogTitle="Animation Dialog"/>

		<SwitchPreference
			app:key="rotation_switch"
			app:summaryOff="No rotation when swiping"
			app:summaryOn="Rotation when swiping"
			app:title="Rotation"/>

		<Preference
			app:key="map_activity"
			app:title="Map Activity"
			/>


	</PreferenceCategory>

</PreferenceScreen>